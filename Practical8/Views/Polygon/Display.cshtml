@model Practical8.Models.Polygon
@{
    ViewBag.Title = "Display";
}

<div class="clearfix mb-4">
    @using (Html.BeginForm("RedirectToSelectShape", "Polygon", FormMethod.Post, new { @class = "float-end" }))
    {


        <input type="submit" value="Add Shape" class="btn btn-primary" />

    }
</div>


<div>
    <p class="shape-description">@Model.Description</p>

    <p class="shape-area">Area: @Model.getArea()</p>
</div>

<div>
    @Html.Raw(Model.getSVG())
</div>

<style>
    .shape-description{
        font-size: 15px;
    }

    .shape-area{
        font-size: 12px;
    }
</style>